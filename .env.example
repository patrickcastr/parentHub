AZURE_STORAGE_CONNECTION_STRING=""
SMTP_HOST=""
SMTP_PORT="587"
SMTP_USER=""
SMTP_PASS=""
SMTP_FROM="Parent Hub <no-reply@example.com>"
NEXTAUTH_SECRET="dev-secret-change-me"
HCAPTCHA_SITE_KEY=""
HCAPTCHA_SECRET=""
AUTH_BYPASS=0
ALLOW_DEV_PASSWORD=0 # set to 1 to enable dev email/password login (static password 'devpass')
DEV_LOGIN_HASH=       # optional bcrypt hash (created via bcryptjs) to use instead of static password when ALLOW_DEV_PASSWORD=1

# Frontend / API origins
CLIENT_APP_ORIGIN=http://localhost:5173
VITE_API_URL=http://localhost:5180 # production build may set VITE_API_URL=/api

# Microsoft Entra ID (Azure AD) SSO
AZURE_TENANT_ID=
AZURE_CLIENT_ID=
AZURE_CLIENT_SECRET=
AZURE_REDIRECT_URI=http://localhost:5180/api/auth/callback/microsoft
POST_LOGIN_REDIRECT=http://localhost:5173/

# Cookie / session flags (override defaults)
COOKIE_SAMESITE=lax
COOKIE_SECURE=false

# Feature flags (optional toggles for multiple auth providers)
AUTH_MS_ENABLED=1
AUTH_OTHER_ENABLED=1

# Security tuning
BCRYPT_SALT_ROUNDS=12