# ---- build ----
FROM node:20-alpine AS build
WORKDIR /app
COPY package*.json ./
COPY vite.config.ts tsconfig.json ./
COPY src ./src
RUN npm ci
ARG VITE_API_BASE_URL
ARG VITE_MSAL_CLIENT_ID
ARG VITE_MSAL_TENANT_ID
ARG VITE_MSAL_AUTHORITY
ENV VITE_API_BASE_URL=$VITE_API_BASE_URL
ENV VITE_MSAL_CLIENT_ID=$VITE_MSAL_CLIENT_ID
ENV VITE_MSAL_TENANT_ID=$VITE_MSAL_TENANT_ID
ENV VITE_MSAL_AUTHORITY=$VITE_MSAL_AUTHORITY
RUN npm run build

# ---- serve ----
FROM nginx:alpine
COPY --from=build /app/dist /usr/share/nginx/html
RUN printf 'server { \n  listen 8080; \n  server_name _; \n  root /usr/share/nginx/html; \n  location / { try_files $uri /index.html; } \n}\n' > /etc/nginx/conf.d/default.conf
EXPOSE 8080