# ---- build ----
FROM node:20-alpine AS build
WORKDIR /app
COPY package*.json ./
RUN npm ci
COPY . .
ARG VITE_API_BASE_URL VITE_MSAL_CLIENT_ID VITE_MSAL_TENANT_ID VITE_MSAL_AUTHORITY
ENV VITE_API_BASE_URL=$VITE_API_BASE_URL \
    VITE_MSAL_CLIENT_ID=$VITE_MSAL_CLIENT_ID \
    VITE_MSAL_TENANT_ID=$VITE_MSAL_TENANT_ID \
    VITE_MSAL_AUTHORITY=$VITE_MSAL_AUTHORITY
RUN npm run build  # produces /app/dist

# ---- serve ----
FROM nginx:1.25-alpine
# make Nginx listen on 8080 with SPA fallback
COPY web/nginx.conf /etc/nginx/conf.d/default.conf
# validate nginx config at build time (will fail the build if broken)
RUN nginx -t
# copy built site
COPY --from=build /app/dist /usr/share/nginx/html
EXPOSE 8080
CMD ["nginx", "-g", "daemon off;"]
