{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist-server",
    "module": "CommonJS",
    "target": "ES2020",
    "moduleResolution": "Node",
    "noEmit": true,
    "esModuleInterop": true,
    "strict": true,
    "types": ["node"],
    "lib": ["ES2020", "DOM"],
    "rootDir": "./server",
    "baseUrl": "./server"
  },
  "include": ["server/**/*.ts"],
  "exclude": ["node_modules", "dist", "dist-server"]
}
